{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"],
      "@common": ["common/index.ts", "./common"],
      "@common/*": ["common/*"],
      "@core": ["core/index.ts", "./core"],
      "@core/*": ["core/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
